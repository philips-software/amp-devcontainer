{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "bats",
      "args": [
        "testsuite.bats"
      ],
      "options": {
        "cwd": "${workspaceFolder}/test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "source": "bats",
        "owner": "bats",
        "fileLocation": ["relative", "${workspaceFolder}/test"],
        "pattern": [
          {
            "regexp": "^.*test file(.*), line (\\d+)",
            "file": 1,
            "line": 2
          },
          {
            "regexp": "^(.*failed)",
            "message": 1
          }
        ]
      }
    }
  ]
}
