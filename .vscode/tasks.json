{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests",
      "type": "shell",
      "group": "test",
      "command": "bats",
      "args": ["testsuite.bats"],
      "options": {
        "cwd": "${workspaceFolder}/tests"
      },
      "problemMatcher": {
        "owner": "bats",
        "source": "bats",
        "pattern": [
          {
            "regexp": "^.*test file(.*), line (\\d+)",
            "file": 1,
            "location": 2
          },
          {
            "regexp": "^(.*failed)",
            "message": 1
          }
        ]
      }
    }
  ]
}
